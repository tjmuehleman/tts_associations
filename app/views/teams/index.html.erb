<h1>Listing teams</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Students</th>
      <th>Num students</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td>
          <%team.students.each do |student|%>
            <%=student.first_name%><br>
          <%end%>
         </td>
        <td><%= team.num_students %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
